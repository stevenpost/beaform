<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="production"
		transaction-type="RESOURCE_LOCAL">
		<!-- Use Hibernate OGM provider: configuration will be transparent -->
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<!-- This is required to be spec compliant, classes outside the main jar file are not scanned in Java SE. -->
		<class>beaform.entities.Formula</class>
		<class>beaform.entities.FormulaTag</class>
		<properties>
			<!-- property is optional if you want to use Infinispan, otherwise adjust 
				to your favorite NoSQL Datastore provider. -->
			<!--
			-->
			<property name="hibernate.ogm.datastore.provider" value="neo4j_embedded" />
			<property name="hibernate.ogm.neo4j.database_path" value="neo4j/db" />
			<!-- defines which JTA Transaction we plan to use (comment out for NEO4j) -->
			<!--
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform" />
			-->
			<property name="hibernate.search.lucene_version" value="LUCENE_CURRENT"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="test"
		transaction-type="RESOURCE_LOCAL">
		<!-- Use Hibernate OGM provider: configuration will be transparent -->
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<!-- This is required to be spec compliant, classes outside the main jar file are not scanned in Java SE. -->
		<class>beaform.entities.Formula</class>
		<class>beaform.entities.FormulaTag</class>
		<properties>
			<!-- property is optional if you want to use Infinispan, otherwise adjust 
				to your favorite NoSQL Datastore provider. -->
			<!--
			-->
			<property name="hibernate.ogm.datastore.provider" value="neo4j_embedded" />
			<property name="hibernate.ogm.neo4j.database_path" value="neo4j_test/db" />
			<!-- defines which JTA Transaction we plan to use (comment out for NEO4j) -->
			<!--
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform" />
			-->
			<property name="hibernate.search.lucene_version" value="LUCENE_CURRENT"/>
		</properties>
	</persistence-unit>
</persistence>